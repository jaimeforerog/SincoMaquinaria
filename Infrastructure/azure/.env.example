# ========================================
# Azure Deployment Environment Variables
# ========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# Azure Configuration
RESOURCE_GROUP=rg-sincomaquinaria-prod
LOCATION=eastus
ENVIRONMENT=prod
BASE_NAME=sincomaquinaria

# Database Configuration
POSTGRES_ADMIN_PASSWORD=YourSecurePassword123!
POSTGRES_ADMIN_USERNAME=sincoAdmin
POSTGRES_DATABASE_NAME=SincoMaquinaria

# JWT Configuration
JWT_SECRET_KEY=YourVerySecureJwtSecretKeyHere-ChangeThis!
JWT_ISSUER=SincoMaquinaria
JWT_AUDIENCE=SincoMaquinariaApp
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# Container Configuration
MIN_REPLICAS=1
MAX_REPLICAS=5
CONTAINER_IMAGE_TAG=latest

# Security
MAX_FILE_UPLOAD_SIZE_MB=50
