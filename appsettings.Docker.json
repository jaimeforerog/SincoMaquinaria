{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Marten": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Security": {
    "MaxFileUploadSizeMB": 10,
    "AllowedOrigins": [
      "http://localhost:5000",
      "https://localhost:5000"
    ],
    "EnableAdminEndpoints": false
  },
  "Jwt": {
    "Key": "",
    "Issuer": "SincoMaquinaria",
    "Audience": "SincoMaquinariaApp",
    "ExpirationMinutes": 480
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [],
    "ClientRules": [],
    "CustomRules": [
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "15m",
        "Limit": 10
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "*/auth/setup",
        "Period": "1h",
        "Limit": 1
      },
      {
        "Endpoint": "*/admin/*",
        "Period": "1m",
        "Limit": 10
      }
    ]
  }
}
