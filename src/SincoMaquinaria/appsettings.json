{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=SincoMaquinaria;Username=postgres;Password=YOUR_DB_PASSWORD",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "Security": {
    "MaxFileUploadSizeMB": 10,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ],
    "EnableAdminEndpoints": false
  },
  "Jwt": {
    "Key": "YOUR_JWT_SECRET_KEY",
    "Issuer": "SincoMaquinaria",
    "Audience": "SincoMaquinariaApp",
    "ExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Caching": {
    "Enabled": true,
    "DefaultExpirationMinutes": 15,
    "Configurations": {
      "ConfiguracionGlobal": {
        "ExpirationMinutes": 60
      },
      "Equipos": {
        "ExpirationMinutes": 10
      },
      "Empleados": {
        "ExpirationMinutes": 10
      }
    }
  },
  "Hangfire": {
    "DashboardEnabled": true,
    "DashboardPath": "/hangfire",
    "ServerName": "SincoMaquinaria-Worker",
    "WorkerCount": 5
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "15m",
        "Limit": 300
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 1000
          }
        ]
      }
    ],
    "ClientRules": [],
    "CustomRules": [
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "15m",
        "Limit": 10
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "*/auth/setup",
        "Period": "1h",
        "Limit": 1
      },
      {
        "Endpoint": "*/admin/*",
        "Period": "1m",
        "Limit": 10
      }
    ]
  }
}